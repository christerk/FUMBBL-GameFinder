<Window x:Class="GamefinderVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamefinderVisualizer"
        xmlns:models="clr-namespace:GamefinderVisualizer.Models"
        xmlns:controls="http://schemas.panthernet.ru/graphx/"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="768" Width="1366">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <controls:ZoomControl x:Name="zoomctrl" Grid.Row="1" Background="Gray">
            <models:GamefinderGraphArea x:Name="Area"/>
        </controls:ZoomControl>
    </Grid>
</Window>
